<?xml version="1.0" encoding="utf-8"?>
<manifest
    package="com.example.administrator.androidbase"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET"></uses-permission>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"></uses-permission>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name=".activity.activity.DownLoadActivity"/>

        <activity android:name=".activity.activity.TabHostActivity"/>

        <activity android:name=".activity.activity.tabhostactivity.AAcvtivity"/>
        <activity android:name=".activity.activity.tabhostactivity.BActivity"/>
        <activity android:name=".activity.activity.tabhostactivity.CActivity"/>
        <activity android:name=".activity.activity.ViewsActivity"/>
        <activity android:name=".activity.activity.ListViewMaxActivity"/>
        <activity android:name=".activity.activity.ListViewBottomActivity"/>
        <activity android:name=".activity.activity.ListViewSeparatorActivity"/>
        <activity android:name=".activity.activity.WindowManagerActivity"/>

        <provider
            android:name=".activity.download.DownloadProvider"
            android:authorities="www.xxx.com"
            />
    </application>

</manifest>
